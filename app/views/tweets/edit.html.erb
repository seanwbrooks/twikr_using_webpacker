<h1>Change Idea</h1>

<%if @tweet.errors.any? %>
    <%@tweet.errors.full_messages.each do |msg| %>
    <div><%= msg %></div>
    <%end%>
<%end%>

<%= form_for @tweet, html: { method: :put } do |f| %>
    <%= f.input :body %>
    <%= f.submit "Update Idea" %>
<%end%>

<h3>Delete Idea</h3>
<p>There's no bad idea...</p>
<% if user_signed_in? %>
  <% if (@tweet.user == current_user) || (current_user.admin?) %>
  <p><%= button_to "Delete Idea", @tweet, data: { confirm: "Are you sure?" }, method: :delete %></p>
  <% end %>
<% end %>
